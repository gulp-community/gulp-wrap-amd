{
  "$schema": "http://json.schemastore.org/prettierrc",
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "parser": "babel",
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "bracketSpacing": false,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.less",
      "options": {"parser": "less"}
    },
    {
      "files": "*.scss",
      "options": {"parser": "scss"}
    },
    {
      "files": "*.yml",
      "options": {
        "parser": "yaml",
        "singleQuote": true
      }
    },
    {
      "files": "*.md",
      "options": {"parser": "markdown"}
    },
    {
      "files": "*.mdx",
      "options": {"parser": "mdx"}
    },
    {
      "files": "*.js",
      "options": {"parser": "babel"}
    }
  ]
}
